<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FirmManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div id="dismiss">
                <i class="fas fa-times"></i>
            </div>
            <div class="sidebar-header">
                <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" class="logo" /><span class="sidebar-header-text">Firm Manager</span></a>
            </div>
            <ul>
                <li id="home">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                </li>
                <li id="customers">
                    <a asp-area="" asp-controller="Customers" asp-action="Index"><i class="fas fa-users"></i> Customers</a>
                </li>
                <li id="products">
                    <a asp-area="" asp-controller="Products" asp-action="Index"><i class="fas fa-warehouse"></i> Products</a>
                </li>
                <li id="orders">
                    <a asp-area="" asp-controller="Orders" asp-action="Index"><i class="fas fa-truck"></i> Orders</a>
                </li>
                <li id="statistics">
                    <a asp-area="" asp-controller="Home" asp-action="Statistics"><i class="fas fa-chart-pie"></i> Statistics</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li id="logout"><a asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                }
            </ul>
        </nav>
        <div class="content">
            <div class="container-fluid">
                <button type="button" id="sidebarCollapse" class="btn">
                    <i class="fas fa-bars"></i>
                </button>
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; 2018 - FirmManager</p>
                </footer>
            </div>
        </div>
    </div>
    <script src="~/js/site.js"></script>
</body>
</html>