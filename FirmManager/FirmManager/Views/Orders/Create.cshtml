@model FirmManager.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <form asp-action="Create">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerID" class="control-label"></label>
                <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>

            <h5><strong>Select products</strong></h5>
            <div class="form-group">
                <select id="selectedProducts" name="selectedProducts" multiple class="form-control product-dropdown">
                    @{
                        List<Product> products = ViewBag.Products;

                        foreach (var product in products)
                        {
                            <option value="@product.ID">@product.Title</option>
                        }
                    }
                </select>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="action-button" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div id="quantities">
                    @{
                        foreach (var product in products)
                        {
                            <div>
                                @product.Title <input class="form-control quantity" type="number" placeholder="Quantity" name="quantity" step="1" min="1" /><br />
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="action-button"><i class="fas fa-arrow-left"></i> Back to List</a>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/orderQuantity.js"></script>